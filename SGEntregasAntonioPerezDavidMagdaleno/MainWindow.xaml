<Window x:Class="SGEntregasAntonioPerezDavidMagdaleno.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGEntregasAntonioPerezDavidMagdaleno"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="200" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Name="Ordenador" Grid.Row="0" Height="80" Width="100">
            <Button.Background>
                <ImageBrush ImageSource="escritorio.png"/>
            </Button.Background>
        </Button>
        <Button Name="Movil" Grid.Row="1" Height="80" Width="80">
            <Button.Background>
                <ImageBrush ImageSource="tactil.png"/>
            </Button.Background>
        </Button>
        <Button Name="Salir" Grid.Row="2" Height="80" Width="80">
            <Button.Background>
                <ImageBrush ImageSource="salir.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
