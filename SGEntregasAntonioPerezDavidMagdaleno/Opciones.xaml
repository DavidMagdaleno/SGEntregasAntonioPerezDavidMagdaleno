<Window x:Class="SGEntregasAntonioPerezDavidMagdaleno.Opciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGEntregasAntonioPerezDavidMagdaleno"
        mc:Ignorable="d"
        Title="Opciones" Height="400" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Name="GestionCliente" Content="Gestionar Clientes" Grid.Row="0" Height="40" Width="100" Click="GestionCliente_Click"></Button>
        <Button Name="GestionPedidos" Content="Gestionar Pedidos" Grid.Row="1" Height="40" Width="100" Click="GestionPedidos_Click"></Button>
        <Button Name="Salir" Content="Salir" Grid.Row="2" Height="40" Width="100" Click="Salir_Click"></Button>
    </Grid>
</Window>
